<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:AvaloniaAppWithCommunityToolkitNET8.ViewModels"
        x:Class="AvaloniaAppWithCommunityToolkitNET8.Views.NonModalView"
		x:DataType="vm:NonModalViewModel"
        Icon="/Assets/avalonia-logo.ico"
		Title="NonModalView"
		d:DesignHeight="450"
		d:DesignWidth="800"
		mc:Ignorable="d">
	<Grid ColumnDefinitions="Auto, *, Auto"
          RowDefinitions="Auto, *, Auto">

		<Label Grid.Column="1"
               Grid.Row="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Content="Non-Modal View"/>

		<Button Grid.Column="1"
                Grid.Row="2"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Command="{Binding CloseNonModalCommand}"
                Content="Close"/>
	</Grid>
</Window>
