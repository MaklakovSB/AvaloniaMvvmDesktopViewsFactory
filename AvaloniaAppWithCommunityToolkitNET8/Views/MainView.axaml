<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:AvaloniaAppWithCommunityToolkitNET8.ViewModels"
        x:Class="AvaloniaAppWithCommunityToolkitNET8.Views.MainView"
		x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
		d:DesignHeight="450"
		d:DesignWidth="800"
		Title="MainView"
		mc:Ignorable="d">

	<Grid RowDefinitions="Auto,*">
		<!-- Main menu -->
		<Menu Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3">
			<MenuItem Header="Open modal widnows">
				<MenuItem Header="Open ICloseable modal QuestionBox"
                            Command="{Binding OpenQuestionBoxCommand}"/>
				<MenuItem Header="Open non ICloseable modal window"
                            Command="{Binding OpenNonICloseableModalCommand}"/>
				<MenuItem Header="Open AttributeBindingView modal window"
                            Command="{Binding OpenAttributeBindingViewModelCommand}"/>

			</MenuItem>
			<MenuItem Header="Open non modal widnows">
				<MenuItem Header="Open non modal window"
                    Command="{Binding OpenNonModalCommand}"/>
			</MenuItem>
		</Menu>
	</Grid>
</Window>
